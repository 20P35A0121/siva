import java.util.*;
class Main{
    public static void main(String[] arg){
        Scanner sc = new Scanner(System.in);
        String s = sc.nextLine();
        StringBuilder ans = new StringBuilder();
        for(int i=0;i<s.length();i++){
            ans.append(s.charAt(i));
        }
        ans.reverse();
        System.out.println(ans.toString());
    }
}
